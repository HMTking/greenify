# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/mini-plant-store

# JWT Secret Key (use a strong, random key in production)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Node Environment
NODE_ENV=development

# Server Port
PORT=5000

# CORS Configuration
# Primary frontend URL (REQUIRED for production)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Additional allowed origins (comma-separated, optional)
# Use this for multiple frontends, staging environments, or additional domains
# Example: ADDITIONAL_ORIGINS=https://staging.yourapp.com,https://admin.yourapp.com
ADDITIONAL_ORIGINS=

# Production origins (comma-separated, alternative to individual URLs)
# Use this instead of FRONTEND_URL if you have multiple production domains
# Example: PRODUCTION_ORIGINS=https://yourapp.com,https://www.yourapp.com,https://admin.yourapp.com
PRODUCTION_ORIGINS=

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Google AI API Key (for plant care AI feature)
GOOGLE_AI_API_KEY=your_google_ai_api_key
